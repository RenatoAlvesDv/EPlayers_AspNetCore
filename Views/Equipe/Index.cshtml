    <input type ="text" nome="Nome" />

    <label>Imagem</label>
    <input type=" type="text" name="inmagem"/>

    <button type="submit"> Cadastrat</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Foto</th>
    </thead>
